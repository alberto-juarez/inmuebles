<% if current_account == @account or current_account.admin? %>

  <h1>Dueños</h1>

  <table class="table table-striped table-responsive-md">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Tel</th>
        <th>Cel</th>
        <th>Comments</th>
        <th>Property</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @duenos.each do |dueno| %>
        <tr>
          <td><%= dueno.first_name %></td>
          <td><%= dueno.last_name %></td>
          <td><%= dueno.email %></td>
          <td><%= dueno.tel %></td>
          <td><%= dueno.cel %></td>
          <td><%= dueno.comments %></td>
          <td><%= dueno.property_id %></td>
          <td><%= link_to 'Show', dueno %></td>
          <td><%= link_to 'Edit', edit_dueno_path(dueno) %></td>
          <td><%= link_to 'Destroy', dueno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'Nuevo Dueño', new_dueno_path, class:"btn btn-success" %>
<%end%>
