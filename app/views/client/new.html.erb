<%= form_with(model: client_new_path, local: true) do |form| %>

  <%= render "layouts/validation",item: @property%>
  <div class="row">
    <h4 class="h4">Información Básica</h4>
  </div>
  <div class="row">
    <div class="col-3">
      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name,class: "form-control" %>
      </div>
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= form.label :last_name %>
        <%= form.text_field :last_name,class: "form-control" %>
      </div>
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= form.label :tel %>
        <%= form.text_field :tel,class: "form-control" %>
      </div>
    </div>
    <div class="col-3">
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email,class: "form-control" %>
      </div>
    </div>

  </div>





  <div class="form-group">
    <%= form.label :comentarios %>
    <%= form.rich_text_area :comentarios %>
  </div>


  <div class="form-group">
    <%= form.submit "Guardar propiedad",class: "btn btn-success" %>
  </div>
<% end %>
