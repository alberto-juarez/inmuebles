<% if current_account.admin? %>
<p id="notice"><%= notice %></p>

<h1>Mensajes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Mensaje</th>
      <th>Creador</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.titulo %></td>
        <td><%= message.mensaje %></td>
        <td><%=  @asesores[message.account_id-1]%></td>
        <td><%if message.visible?%>SÃ­<%else%>No<%end%></td>
        <td><%= link_to 'Ver', message %></td>
        <td><%= link_to 'Editar', edit_message_path(message) %></td>
        <td><%= link_to 'Eliminar', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo mensaje', new_message_path, class:"btn btn-success" %>
<%end%>
