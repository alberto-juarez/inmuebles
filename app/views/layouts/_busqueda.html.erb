<%= form_tag("/search", method: "get") do %>
  <div class="row">
    <div class="col-3">
      <%= label_tag(:tipoOp, "Tipo:") %>
      <%= select_tag(:tipoOp, options_for_select([ "Venta", "Renta" ], "Renta"), {:class => 'form-control'}) %>
    </div>
    <div class="col-3">
      <%= label_tag(:tipoProp, "Tipo:") %>
      <%= select_tag(:tipoProp, options_for_select([ "Departamento", "Casa" ], "Casa"), {:class => 'form-control'}) %>
    </div>
    <div class="col-3">
      <%= label_tag(:zona, "Zona:") %>
      <%=  select_tag(:zona, options_for_select([ "Norte", "Sur" ], "Sur"), {:class => 'form-control'}) %>
    </div>
    <div class="col-3">
      <%= label_tag(:colonia, "Colonia:") %>
      <%= select_tag(:colonia, options_for_select([ "Hola", "Contry" ], "Hola"), {:class => 'form-control'}) %>
    </div>
  </div>


  <div class="row mt-3">
    <div class="col-3">
    </div>
    <div class="col-3">
    </div>
    <div class="col-3">
    </div>
    <div class="col-3">
      <%= submit_tag("Buscar",:class=>"btn btn-block btn-success") %>
    </div>
  </div>
<% end %>
