<h1>Propiedades - Todas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Zona</th>
      <th>Colonia</th>
      <th>Precio</th>
      <th>Mconst</th>
      <th>Mterreno</th>
      <th>Banos</th>
      <th>Recamaras</th>
      <%if current_account.admin?%>
        <th colspan="3"></th>
      <%else%>
        <th colspan="1"></th>
      <%end%>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.id %></td>
        <td><%= property.zona %></td>
        <td><%= property.colonia %></td>
        <td><%= number_to_currency(property.precio, locale: :en) %></td>
        <td><%= property.mConst %></td>
        <td><%= property.mTerreno %></td>
        <td><%= property.banos %></td>
        <td><%= property.recamaras %></td>
        <td><%= link_to 'Ver', property %></td>
        <%if current_account.admin?%>
        <td><%= link_to 'Editar', edit_property_path(property) %></td>
        <td><%= link_to 'Eliminar', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva propiedad', new_property_path, class:"btn btn-success" %>
