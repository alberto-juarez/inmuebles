<div class="text-center border p-4 pt-3 pb-3">
  <div class="row">
    <div class="col-12">
      <h2 class="h4"><%= t '.contact' %></h2>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-12">
      <span class="lead"><%= @agent.full_name %></span>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-12">
      <a class="btn btn-block btn-success font-weight-bold" href="tel:+5280404080" id="show-tel" data-telephone="8040-4080"><i class="fas fa-phone mr-1"></i><span><%= t '.call' %></span></a>
    </div>
  </div>
  <div class="row mb-2">
    <div class="col-12">
      <a class="btn btn-block negro font-weight-bold" href="https://wa.me/15551234567?text=Me interesa <%=@property.id%>" target="_blank"><i class="fab fa-whatsapp mr-1"></i>WHATSAPP</a>

      <!-- <button class="btn btn-block btn-info" data-toggle="modal" data-target="#contact-modal">Email</button> -->
    </div>
    
  </div>
  <div class="row">
    <div class="col-12">
      <a class="btn btn-block negro font-weight-bold" href="mailto:<%= @agent.email %>?subject=Propiedad%20<%=@property.id%>" target="_blank"><i class="fas fa-envelope mr-1"></i>EMAIL</a>

    </div>
  </div>
</div>
