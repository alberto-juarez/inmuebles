<div class="col-12 text-center border p-4 pt-3 pb-3">
  <div class="row">
    <div class="col-12">
      <h2 class="h4"><%= t '.title' %></h2>
    </div>

  </div>
  <div class="row mt-2">

    <div class="col-12">
      <div class="row">
        <%if usertemp_signed_in?%>
          <%if current_usertemp.favorited?(@property)%>
            <%= link_to t('.remover'),toggle_fav_path(id: @property.id), remote: true, method: :post,class:"btn btn-block btn-success text-uppercase",id:@property.id%>
          <% else %>
            <%= link_to t('.agregar'),toggle_fav_path(id: @property.id), remote: true, method: :post,class:"btn btn-block btn-success text-uppercase",id:@property.id%>
          <%end%>
        <%else%>
          <%= link_to t('.signin'), new_usertemp_session_path, class:"btn btn-block btn-success text-uppercase" %>
        <%end%>
      </div>
    </div>
  </div>
</div>
