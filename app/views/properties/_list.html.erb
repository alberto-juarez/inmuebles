<% properties.each do |property|%>
  <div class="col-12 col-md-4 mb-3">
    <div class="property border">

        <div class="property-thumb" style="background-image:url('<%=rails_blob_url(property.cover_picture)%>')">
          <%= link_to "", property_path(property)%>
        </div>

        <div class="property-summary mb-2 p-3 text-truncate">
          <span class="h6 mb-1 text-uppercase">
            <%if property.tipoOp == "Renta" %>
              <%= t '.rent' %> -
              <%if property.tipoProp == "Terreno"%>
                <%= t '.terreno' %>
              <%elsif property.tipoProp == "Bodega"%>
                <%= t '.warehouse' %>
              <%elsif property.tipoProp == "Casa"%>
                <%= t '.house' %>
              <%elsif property.tipoProp == "Departamento"%>
                <%= t '.appartment' %>
              <%elsif property.tipoProp == "Oficina"%>
                <%= t '.ofice' %>
              <%end%>
              </span>
              <br>
              <span class="h6"><%=number_to_currency(property.precio,precision: 0, locale: :en)%><%=t '.month'%></span>
              <br>
            <%else%>
              <%= t '.sale' %> -
              <%if property.tipoProp == "Terreno"%>
                <%= t '.terreno' %>
              <%elsif property.tipoProp == "Bodega"%>
                <%= t '.warehouse' %>
              <%elsif property.tipoProp == "Casa"%>
                <%= t '.house' %>
              <%elsif property.tipoProp == "Departamento"%>
                <%= t '.appartment' %>
              <%elsif property.tipoProp == "Oficina"%>
                <%= t '.ofice' %>
              <%end%>
              </span>
              <br>
              <span class="h6"><%=number_to_currency(property.precio,precision: 0, locale: :en)%></span>
              <br>
            <%end%>


          <span class="h6 mt-1 text-uppercase">
            <%=property.zona%>
          </span>
          <br>
          <span class="h6 mt-1 text-uppercase">
            <%=property.colonia%>
          </span>

        </div>
    </div>
  </div>
<%end%>
